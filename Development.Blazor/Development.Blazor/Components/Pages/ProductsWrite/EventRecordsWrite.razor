@page "/eventRecordsWrite"
@using Development.Blazor.DTOs.Tests
@using Development.Blazor.Paging
@rendermode InteractiveServer
@inject IProductsWriteHttpClient _writeSideHttpClient

<div class="card border-primary">

    <div class="card-header text-center bg-primary text-light">
        <h4><b>WRITE SIDE EVENT RECORDS</b></h4>
    </div>

    <div class="card-header">
        <div class="row mt-2">
            <div class="col-2">
                <label for="aggId">Aggregate Id:</label>
                <input id="aggId" type="text" @bind="_aggregateIdString" @bind:after="RefreshData" />
            </div>
            <div class="col-2">
                <label for="corrId">Correlation Id:</label>
                <input id="corrId" type="text" @bind="_correlationId" @bind:after="RefreshData" />
            </div>
            <div class="col-2">
                <label for="minV">Min Version:</label>
                <input id="minV" type="text" @bind="_minVersion" @bind:after="RefreshData" />
            </div>
            <div class="col-2">
                <label for="maxV">Max Version:</label>
                <input id="maxV" type="text" @bind="_maxVersion" @bind:after="RefreshData" />
            </div>
            <div class="col-2">
                <label for="pagesize">Page Size:</label>
                <input id="pagesize" type="number" @bind="_pageSize" @bind:after="RefreshData" />
            </div>
            <div class="col-1">
                <a class="btn btn-primary form-control" @onclick="PageBackward">Back</a>
            </div>
            <div class="col-1">
                <a class="btn btn-primary form-control" @onclick="PageForward">Fwd</a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">

                @if (_eventRecords is not null)
                {
                    <table class="table table-sm table-bordered text-center">
                        <thead class="bg-primary text-light">
                            <tr>
                                <th>Id</th>
                                <th>Aggregate Id</th>
                                <th>Version</th>
                                <th>Event Type</th>
                                <th>Correlation Id</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in _eventRecords)
                            {
                                <tr>
                                    <td>@record.Id</td>
                                    <td>@record.AggregateId</td>
                                    <td>@record.AggregateVersion</td>
                                    <td>@record.EventType?[0..42]</td>
                                    <td>@record.CorrelationId</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    
                }

            </div>
        </div>
    </div>

    <div class="row m2">
        @if (_pagingData is not null)
        {
            <div class="col-3 offset-2">
                <span class="text-primary">Page @_pagingData.CurrentPage of @_pagingData.TotalPageCount</span>
            </div>
            <div class="col-3">
                <span class="text-primary">Page Size: @_pagingData.PageSize</span>
            </div>
            <div class="col-2">
                <span class="text-primary">Total Items: @_pagingData.TotalItemCount</span>
            </div>
        }
    </div>

    <div class="card-footer text-center bg-primary text-light">
        <h5><b><i>Be good to your pets!</i></b></h5>
    </div>
</div>

@code {

    private List<EventRecordDTO>? _eventRecords;
    private int _eventRecordCount;

    private string? _aggregateIdString;
    private Guid? _aggregateId;
    private string? _correlationId;
    private int _minVersion = 0;
    private int _maxVersion = Int32.MaxValue;
    private int _pageNumber = 1;
    private int _pageSize = 10;
    private PaginationMetadata? _pagingData;


    private async Task PageForward()
    {
        if (_pagingData is null || _pageNumber >= _pagingData.TotalPageCount) return;
        _pageNumber = _pageNumber + 1;
        await RefreshData();
    }

    private async Task PageBackward()
    {
        if (_pageNumber <= 1) return;
        _pageNumber = _pageNumber - 1;
        await RefreshData();
    }

    private async Task RefreshData()
    {
        // if (!string.IsNullOrWhiteSpace(_aggregateIdString)) _aggregateId = Guid.Parse(_aggregateIdString);
        var result = await _writeSideHttpClient.GetEventRecordsAsync(_aggregateIdString, _correlationId, _minVersion, _maxVersion, _pageNumber, _pageSize);
        if (result.IsSuccess)
        {
            if (result.EventRecords is not null)
            {
                _eventRecords = result.EventRecords.ToList();
                _pagingData = result.PagingData;
                _eventRecordCount = _eventRecords.Count;
            }
        }
        else Console.WriteLine(result.ErrorMessage);
    }

    protected override async Task OnAfterRenderAsync(bool isFirstRender)
    {
        if (isFirstRender)
        {
            // if (!string.IsNullOrWhiteSpace(_aggregateIdString)) _aggregateId = Guid.Parse(_aggregateIdString);
            var result = await _writeSideHttpClient.GetEventRecordsAsync(_aggregateIdString, _correlationId, _minVersion, _maxVersion, _pageNumber, _pageSize);
            if (result.IsSuccess)
            {            
                if (result.EventRecords is not null)
                {
                    _eventRecords = result.EventRecords.ToList();
                    _pagingData = result.PagingData;
                    _eventRecordCount = _eventRecords.Count;
                }
            }
            else Console.WriteLine(result.ErrorMessage);
            this.StateHasChanged();
        }
    }
}
